<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="../style/style.css">
    </head>
    <body>
        
        <%-include('header.html')%>
        <%-include('homeBar.html')%>
        <div style="">
            <div style="width:20%;float:left"><%-include('navigation.html')%></div>
            <%= a%>
            <h1 style="color:red;">POPULAR PRODUCT</h1><br>
            <div class="content" >
                <%for(let i=0;i< a.length;i++){%>
                <div class="flexbox">
                    <form action="/addCart" method="get">
                        <input type="hidden" name="pages" value="product_view">
                        <input type="hidden" name="masp" value="<%= a[i].masp%>">
                        <img src="<%= a[i].url%>" style="width:100%;height:150px">
                        <p style="text-align: center;color:black"><%= a[i].tensp%></p>
                        <p style="text-align: center;color:black;font-size: 20px;font-weight: bold;">price:$<%= a[i].price%></p>
                        <input type="submit" value="Add to cart" style="width:150px;background-color: red;padding:10px;text-align: center;margin:10px 50px">
                    </form>
                </div>
                <%}%>
            </div>
        </div>
        <div style="clear:both">
        <%-include('footer.html')%>
    </div>
    </body>
</html>